{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
        "lib": ["dom", "esnext"],
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["src/**/__test__/", "src/plugin/", "node_modules"]
}
